<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="adele.tabs.NewFileController">
   <children>
      <HBox alignment="CENTER" spacing="15.0">
         <children>
            <Label alignment="CENTER_RIGHT" text="Name:" />
            <TextField fx:id="textFieldName" />
         </children>
      </HBox>
      <Separator VBox.vgrow="ALWAYS" />
      <HBox alignment="CENTER" spacing="15.0">
         <children>
            <Label alignment="CENTER_RIGHT" text="Width:" />
            <TextField fx:id="textFieldWidth" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="15.0">
         <children>
            <Label alignment="CENTER_RIGHT" text="Height:" />
            <TextField fx:id="textFieldHeight" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="15.0">
         <children>
            <Label alignment="CENTER_RIGHT" text="Background:" />
            <ColorPicker fx:id="colorPicker" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="15.0">
         <children>
            <Button mnemonicParsing="false" onAction="#createNewImage" prefWidth="80.0" text="OK" />
            <Button mnemonicParsing="false" onAction="#closeTab" prefWidth="80.0" text="Cancel" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets top="40.0" />
   </padding>
</VBox>
